<Window 	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="50"></RowDefinition>
            <RowDefinition MinHeight="50"></RowDefinition>
            <RowDefinition MinHeight="50"></RowDefinition>
            <RowDefinition MinHeight="50"></RowDefinition>
            <RowDefinition MinHeight="50"></RowDefinition>
            <RowDefinition MinHeight="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*" MinWidth="25"></ColumnDefinition>
            <ColumnDefinition MinWidth="120"></ColumnDefinition>
            <ColumnDefinition MinWidth="120"></ColumnDefinition>

        </Grid.ColumnDefinitions>
        <Grid Grid.Column="2" Grid.Row="0" Grid.RowSpan="5">
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="50"></RowDefinition>
                <RowDefinition MinHeight="50"></RowDefinition>
                <RowDefinition MinHeight="50"></RowDefinition>
                <RowDefinition MinHeight="50"></RowDefinition>
                <RowDefinition MinHeight="50"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="60"></ColumnDefinition>
                <ColumnDefinition MinWidth="60"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="Было" Grid.Column="0" Grid.Row="0"  HorizontalAlignment="Center" Height="40" VerticalAlignment="Center" FontSize="18"/>
            <Label Content="Стало" Grid.Column="1" Grid.Row="0"  HorizontalAlignment="Center" Height="40" VerticalAlignment="Center" FontSize="18"/>

            <Label x:Name="OldMainVers" Content="0" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" Height="40" VerticalAlignment="Center" FontSize="18"/>
            <Label x:Name="NewMainVers" Content="0" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" Height="40" VerticalAlignment="Center" FontSize="18"/>

            <Label x:Name="OldSuppVers" Content="0" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center" Height="40" VerticalAlignment="Center" FontSize="18"/>
            <Label x:Name="NewSuppVers" Content="0" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" Height="40" VerticalAlignment="Center" FontSize="18"/>

            <Label x:Name="OldIssuVers" Content="0" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Center" Height="40" VerticalAlignment="Center" FontSize="18"/>
            <Label x:Name="NewIssuVers" Content="0" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Center" Height="40" VerticalAlignment="Center" FontSize="18"/>

            <Label x:Name="OldIncVers" Content="0" Grid.Column="0" Grid.Row="4" HorizontalAlignment="Center" Height="40" VerticalAlignment="Center" FontSize="18"/>
            <Label x:Name="NewIncVers" Content="0" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Center" Height="40" VerticalAlignment="Center" FontSize="18"/>


            <GridSplitter Grid.Column="0" Grid.RowSpan="5" ShowsPreview="True" Width="5" Foreground="Azure" HorizontalAlignment="Right" VerticalAlignment="Stretch" />

        </Grid>


        <CheckBox x:Name="MainVers" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Label Content="Главный номер версии" Grid.Column="1" Grid.Row="1"  HorizontalAlignment="Center" Height="40" VerticalAlignment="Center" FontSize="18"/>


        <CheckBox x:Name="SuppVers" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Content="Вспомогательный номер версии " Grid.Column="1" Grid.Row="2"  HorizontalAlignment="Center" Height="40" VerticalAlignment="Center" FontSize="18"/>

        <CheckBox x:Name="IssuVers" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Content="Номер ревизии" Grid.Column="1" Grid.Row="3"  HorizontalAlignment="Center" Height="40" VerticalAlignment="Center" FontSize="18"/>

        <CheckBox x:Name="IncVers"  Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Label Content="Номер сборки" Grid.Column="1" Grid.Row="4"  HorizontalAlignment="Center" Height="40" VerticalAlignment="Center" FontSize="18"/>

        <Button x:Name="Compile" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="5" Height="80"  HorizontalAlignment="Center" FontSize="16"  >Скомпилировать</Button>
        <Button x:Name="Additional"  Grid.Column="2" Grid.ColumnSpan="1" Grid.Row="5" Height="60" HorizontalAlignment="Center" FontSize="14" Visibility="Hidden">Дополнительно</Button>
        <GridSplitter Grid.RowSpan="4" Grid.Column="0" Grid.Row="1" ShowsPreview="True" Width="5" Foreground="Azure" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
        <GridSplitter Grid.RowSpan="4" Grid.Column="1" Grid.Row="1" ShowsPreview="True" Width="5" Foreground="Azure" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
        <GridSplitter Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="0" ShowsPreview="True" Height="5" Foreground="Azure" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" />
        <GridSplitter Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="1" ShowsPreview="True" Height="5" Foreground="Azure" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" />
        <GridSplitter Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="2" ShowsPreview="True" Height="5" Foreground="Azure" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" />
        <GridSplitter Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="3" ShowsPreview="True" Height="5" Foreground="Azure" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" />
        <GridSplitter Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="4" ShowsPreview="True" Height="5" Foreground="Azure" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" />


    </Grid>
</Window>
